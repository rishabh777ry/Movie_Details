<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_navy_blue"
        tools:context=".MovieSearch"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/editTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Movie Name"
                android:textColor="@color/muted_gold"
                android:textColorHint="@color/muted_gold"
                android:textAlignment="center"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/font"
                android:textSize="18sp"
                android:padding="10dp" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="45dp"
                android:background="@drawable/button_background"
                android:text="Search"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lights, camera, you â€“ discover the next blockbuster now!"
                android:layout_marginTop="65dp"
                android:textColor="@color/muted_gold"
                android:textSize="18dp"
                android:textAlignment="center"
                />

        </LinearLayout>
    </FrameLayout>
</layout>
